		link(rel="stylesheet",href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")
		link(rel="stylesheet",href="style.css")
	body
		hr
		h1 pasos
		.steps
			.container
				.row
					.col-md-offset-1.col-md-2.step.active
						p.text-center
							span 1
						h3.text-center registro
					.col-md-2.step
						p.text-center
							span 2
						h3.text-center cotiza
					.col-md-2.step
						p.text-center
							span 3
						h3.text-center cuestionario
					.col-md-2.step
						p.text-center
							span 4
						h3.text-center contrata
					.col-md-2.step
						p.text-center
							span 5
						h3.text-center póliza
		hr
		h1 registro
		h2.subtitulo ingreso de datos
		
		.container.bggris
			form
				.row
					.col-md-12
						p Para conocer la opción de Hogar que tenemos para ti, por favor completa los siguientes campos:
						h4 Datos personales
				
					.col-md-4
						input#nombre.form-control(type='text', placeholder='Nombre')
					.col-md-4
						input#nombre.form-control(type='text', placeholder='Correo electrónico')					
				.row
					.col-md-12
						h4 Domicilio

				.row
					.col-md-4
						input#nombre.form-control(type='text', placeholder='Calle')
					.col-md-2
						input#nombre.form-control(type='text', placeholder='No.Ext')
					.col-md-2
						input#nombre.form-control(type='text', placeholder='No.Int')
					.col-md-4
						input#nombre.form-control(type='text', placeholder='C.P.*')
				.row
					.col-md-4
						select.form-control
							option(value="opcion-1") Elige tu colonia
							option(value="opcion-2") b
							option(value="opcion-3") c
							option(value="opcion-4") d
							option(value="opcion-5") e
					.col-md-4
						input#nombre.form-control(type='text', placeholder='Delegación/Municipio')
					.col-md-4
						input#nombre.form-control(type='text', placeholder='Ciudad')
				.row
					.col-md-4
						input#nombre.form-control(type='text', placeholder='Estado')
				.row
					.col-md-12
						h4 Suma asegurada
					.col-md-4
						select.form-control
							option(value="opcion-1") Elige la suma asegurada
							option(value="opcion-2") b
							option(value="opcion-3") c
							option(value="opcion-4") d
							option(value="opcion-5") e
				.row
					.col-md-12.text-center
						button.btn-lg cotizar
				.row
					.col-md-12
						p *campos obligatorios

		hr
		h1 cotiza
		.container
			.row
				h2.subtitulo COTIZACIÓN
		.bggris
			.container
				form
					.row
						.col-md-12
							p
								strong Hola XXXXXX
								, ésta es la mejor opción que encontramos para tí:
					.row
						.col-md-4
							.col-md-10
								.bqplanes
									.radio.text-center
									label
										input(type='radio',name='planes',value='option1',checked='true')
									h3.text-center Plan A
									ul
										h3.text-left Cobertura
										li -.-.-.-.
										li -.-.-.-.
										li -.-.-.-.
						.col-md-4
							.col-md-10
								.bqplanes
									.radio.text-center
									label
										input(type='radio',name='planes',value='option2')
									h3.text-center Plan B
									ul
										h3.text-left Cobertura
										li -.-.-.-.
										li -.-.-.-.
										li -.-.-.-.
								.radio.text-center
									label
										input(type='radio',name='terremoto',value='option3',checked='true')
										|	Con terremoto
								.radio.text-center
									label
										input(type='radio',name='terremoto',value='option2')
										|	Sin terremoto
						.col-md-4
							.col-md-10
								.bqplanes
									.radio.text-center
									label
										input(type='radio',name='planes',value='option1')
									h3.text-center Plan PLUS
									ul
										h3.text-left Cobertura
										li -.-.-.-.
										li -.-.-.-.
										li -.-.-.-.
					.row
						.col-md-12
							.col-md-3.text-right
								h4 Pagos por prima:
								h6 Elige el plan que más te 
									br 
									h6 interesa
							.col-md-9
								.col-md-3
									button.btn.btn-info(type='button') $ 0.00 Mensual
								.col-md-3
									button.btn.btn-info(type='button') $ 0.00 quincenal
								.col-md-3
									button.btn.btn-info(type='button') $ 0.00 Semestral
								.col-md-3
									button.btn.btn-info(type='button') $ 0.00 Anual		
					.row
						.col-md-6.text-right
							button.btn-lg NO ME INTERESA
						.col-md-6.text-left
							button.btn-lg(type='button', data-toggle='modal', data-target='#myModal') CONTINUAR



		// Modal
		#myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
			.modal-dialog(role='document')
				.modal-content
					//.modal-header
						button.close(type='button', data-dismiss='modal', aria-label='Close')
							span(aria-hidden='true') ×
						h4#myModalLabel.modal-title Modal title
					.modal-body
						h4
							strong
								¡Buena elección!
						p Para poder continuar y proteger tu informacion es importante que leas y aceptes las politicas de provacidad .
						.checkbox
							label
								input(type='checkbox')
								a(target="_BLANK",href="#") Aviso de Privacidad
						h5 he leído y conozco el alcance del tratamiento de mis datos personales.

						
						button.btn-lg.text-center aceptar



					//.modal-footer
						button.btn.btn-default(type='button', data-dismiss='modal') Close
						button.btn.btn-primary(type='button') Save changes

		hr
		h1 cuestionario

		hr
		h1 contrata

		hr
		h1 poliza

